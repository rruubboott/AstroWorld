---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About Me"

const identity = {
  firstName: "rubot",
  country: "Ireland",
  occupation: "Techno Mage",
  hobbies: ["magic", "sitting", "walking"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Ancient Arts"];

const happy = true;
const finished = false;
const goal = 3;

const skillColour = "navy";
const fontWeight = 700;
const textCase = "uppercase";

---
<BaseLayout pageTitle={pageTitle}>

        <p>This is my amazing new website. I am amazing. You are amazing.</p>
        <p>Some facts about me:</p>
        <ul>
            <li>My name is {identity.firstName}</li>
            <li>I live in {identity.country}</li>
        </ul>
        <p>My skills are</p>
        <ul>
            {skills.map((skill)=><li class="skill">{skill}</li>)}
        </ul>
        { happy && <p>I am happy</p>}
        { finished && <p>I finished this tutorial</p>}
        { goal===3 ? <p>I am self actualised</p> : <p>Not self actualised</p>}
      </BaseLayout>
